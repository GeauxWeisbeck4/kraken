	color: $color-primary;
	text-decoration: none;
	word-wrap: break-word;
}

a:hover {
	color: darken( $color-primary, 15% );
	text-decoration: underline;
}

a img {
	border: none;
	background: none;
}

/*  Prevents border/background on linked image hover.
 *  Adds slight opacity. */
a:hover img {
	border: none;
	background: none;
	opacity: 0.8;
	filter: alpha(opacity=80);
}


